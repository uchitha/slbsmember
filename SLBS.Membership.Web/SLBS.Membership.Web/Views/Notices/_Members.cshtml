@model IEnumerable<SLBS.Membership.Domain.Membership>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MembershipNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaidUpTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlockEmails)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @(item.PaidUpTo.HasValue ? item.PaidUpTo.Value.ToString("yyyy-MMM") : "-")
            </td>
            <td>
                @( (item.BlockEmails.HasValue && item.BlockEmails.Value) ? "Blocked" : "-")
            </td>
        </tr>
    }

</table>
